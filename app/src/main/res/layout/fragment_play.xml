<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/atp__activity_player_background"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_height="50sp">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/nhanlon" />
        <LinearLayout
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center|left"
                android:text="Nhàn lợn"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="Thí Sinh"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txtTime"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="30"
                android:layout_height="match_parent" />

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:layout_width="47dp"
                android:id="@+id/progreesBar"
                app:max="30"
                android:layout_gravity="center"
                app:ringWidth="5sp"
                app:ringColor="@android:color/holo_blue_bright"
                app:ringProgressColor="#00000000"
                app:style="FILL"
                app:textColor="@android:color/white"
                app:textIsShow="true"
                app:textSize="15sp"
                android:background="#00000000"
                android:layout_height="49dp" />
        </FrameLayout>

        <ImageView
            android:layout_width="20sp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/atp__activity_profile_icon_money" />
        <TextView
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textSize="20sp"
            android:id="@+id/txtScore"
            android:textColor="@android:color/white"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40sp">

        <ImageButton
            android:id="@+id/btnstop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:srcCompat="@drawable/state_draable_dungchoi" />
        <ImageButton
            android:id="@+id/btnRefest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:srcCompat="@drawable/state_draable_doi_question" />
        <ImageButton
            android:id="@+id/btn5050"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:srcCompat="@drawable/state_draable5050" />
        <ImageButton
            android:id="@+id/btnNguoiThan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:srcCompat="@drawable/state_draable_nguoithan" />
        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:srcCompat="@drawable/state_draablecall" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtQuesTion"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:layout_margin="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
            android:gravity="center"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_marginLeft="120sp"
            android:background="@drawable/atp__activity_player_layout_play_order_question"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:gravity="center"
        android:orientation="vertical">
            <TextView
                android:id="@+id/txtCau1"
                android:layout_width="300sp"
                android:layout_height="60sp"
                android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
                android:gravity="center|left"
                android:paddingLeft="20sp"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

        <TextView
            android:layout_width="300sp"
            android:layout_height="60sp"
            android:layout_marginTop="10sp"
            android:id="@+id/txtCau2"
            android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
            android:textColor="@android:color/white"
            android:gravity="center|left"
            android:textSize="13sp"
            android:paddingLeft="20sp"/>

        <TextView
            android:id="@+id/txtCau3"
            android:layout_width="300sp"
            android:layout_height="60sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
            android:gravity="center|left"
            android:paddingLeft="20sp"
            android:textColor="@android:color/white"
            android:textSize="13sp"  />

        <TextView
            android:layout_width="300sp"
            android:layout_height="60sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
            android:id="@+id/txtCau4"
            android:textColor="@android:color/white"
            android:gravity="center|left"
            android:textSize="13sp"
            android:paddingLeft="20sp"/>
    </LinearLayout>
</LinearLayout>